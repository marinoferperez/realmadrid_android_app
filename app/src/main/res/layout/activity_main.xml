<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rm_white"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvWelcomeMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Hala Madrid!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/rm_blue_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tvUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargando perfil..."
        android:textSize="18sp"
        android:textColor="@color/rm_gold"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeMain"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí irán las opciones del museo:\n- Kahoot\n- Sala de Trofeos\n- Estadio 3D"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUserType"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>