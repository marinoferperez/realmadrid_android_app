<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Real_madrid_museo" parent="Theme.MaterialComponents.DayNight.NoActionBar" />
    <style name="CalendarioMorado" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/mi_morado</item>
        <item name="colorPrimary">@color/mi_morado</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/BotonesMorados</item>
        <item name="buttonBarNegativeButtonStyle">@style/BotonesMorados</item>
    </style>

    <style name="BotonesMorados" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/mi_morado</item>
    </style>

    <style name="Theme.RealMadrid.Splash" parent="Theme.SplashScreen">
        <!-- Color de fondo -->
        <item name="windowSplashScreenBackground">@color/rm_white</item>
        <!-- Logo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_rm3</item>

        <!-- Duración animación -->
        <item name="windowSplashScreenAnimationDuration">800</item>

        <!-- Tema real después -->
        <item name="postSplashScreenTheme">@style/Theme.Real_madrid_museo</item>
    </style>
</resources>